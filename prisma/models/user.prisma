
model User {
  id        String   @id @unique @default(uuid())
  email     String   @unique
  name      String?
  username  String   @unique
  password  String
  phone     String?  @unique
  walletId  String?  @unique
  wallet    Wallet?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
